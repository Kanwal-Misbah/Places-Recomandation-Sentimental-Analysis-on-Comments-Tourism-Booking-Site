@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

@{
    Layout = "~/Views/Shared/_LayoutVisiter.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Us - Tour Booking Platform</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        /* Reset default browser styles */
        body,
        h1,
        h2,
        h3,
        p,
        img {
            margin: 0;
            padding: 0;
        }

        /* Global styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f1f1f1;
            color: #333;
        }

        .container {
            max-width: 960px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Header */
        header {
            background-color: #333;
            color: #fff;
            padding: 20px;
        }

        nav {
            /* Your navigation styles */
        }

        /* Main content */
        .hero {
            background-color: #fff;
            padding: 60px 0;
            text-align: center;
        }

            .hero h1 {
                font-size: 36px;
                margin-bottom: 20px;
            }

            .hero p {
                font-size: 18px;
                margin-bottom: 40px;
            }

        .team {
            background-color: #f9f9f9;
            padding: 40px 0;
        }

            .team h2 {
                font-size: 28px;
                margin-bottom: 20px;
                text-align: center;
            }

        .team-members {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .team-member {
            flex: 0 0 25%;
            max-width: 300px;
            text-align: center;
        }



        .member-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            overflow: hidden;
            margin: 0 auto;
        }

            .member-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .member-details {
            margin-top: 20px;
        }

            .member-details h3 {
                font-size: 20px;
                margin: 10px 0;
            }

            .member-details p {
                font-size: 16px;
                margin-bottom: 10px;
            }

        /* Footer */
        footer {
            /* Your footer styles */
        }

    </style>
</head>

<body>
    <header>
        <nav>
            <!-- Your navigation menu goes here -->
        </nav>
    </header>

    <main>
        <section class="hero">
            <div class="container">
                <h1>About Us</h1>
                <p>Welcome to our Tour Booking Platform!</p>
                <p>We are a team of passionate individuals who believe in creating unforgettable travel experiences.</p>
            </div>
        </section>

        <section class="team">
            <div class="container">
                <h2>Meet Our Team</h2>
                <div class="team-members">
                    <div class="team-member">
                        <div class="member-image">
                            <img src="~/Images/Member1.png" alt="Team Member 3">
                        </div>
                        <div class="member-details">
                            <h3>Bushra BiBi</h3>
                            <p>Dedicated to crafting captivating designs that leave a lasting impression!</p>
                        </div>
                    </div>
                    <div class="team-member">
                        <div class="member-image">
                            <img src="~/Images/Profile Photo (1).png" alt="Team Member 1">
                        </div>
                        <div class="member-details">
                            <h3>Misbah Kanwal</h3>
                            <p>Passionate about coding and creating seamless user experiences!</p>
                        </div>
                    </div>
                    <div class="team-member">
                        <div class="member-image">
                            <img src="~/Images/Member1.png" alt="Team Member 2">
                        </div>
                        <div class="member-details">
                            <h3>Seher Kanwal</h3>
                            <p>Committed to providing exceptional customer service and ensuring your travel dreams come true!</p>
                        </div>
                    </div>

                    <div class="team-member">
                        <div class="member-image">
                            <img src="~/Images/Member1.png" alt="Team Member 4">
                        </div>
                        <div class="member-details">
                            <h3>Batool Asif</h3>
                            <p>Enthusiastic about exploring new destinations and curating unforgettable travel itineraries!</p>
                        </div>
                    </div>
                    <!-- Add the other team members here -->
                </div>
            </div>
        </section>
    </main>



    <footer>
        <!-- Your footer content goes here -->
    </footer>
</body>

</html>



