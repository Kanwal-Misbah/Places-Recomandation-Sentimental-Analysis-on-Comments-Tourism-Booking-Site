                        <label for="Bus_Email">Email</label>
                        <input type="Bus_Email" id="Bus_Email" name="Bus_Email" required>
                    </div>
                    <div class="login-form-group">
                        <label for="Bus_Password">Password</label>
                        <input type="Bus_Password" id="Bus_Password" name="Bus_Password" required>
                        <span id="Bus_Password" class="error-message"></span>
                    </div>
                    <p style="color:red;font-size:large"> @ViewBag.Message  </p>
                    <div class="login-form-group">
                        <button class="btn btn-primary d-grid w-100" type="submit" value="LoginBusinessUser">Login</button>
                    </div>

                </form>
            }
            <div class="register-link-container">

                <p>Don't have an account? <a href="@Url.Action("Create","Business_User")">Register</a></p>
            </div>
        </div>
    </div>

