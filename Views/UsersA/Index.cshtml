@model IEnumerable<Fin.Models.User>

@{
    ViewBag.Title = "Index";
}
@{

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User_Name)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.User_Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User_Gender)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.User_Phone_Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User_Image)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User_Name)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.User_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Gender)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.User_Phone_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.User_Image))
                {
                    <img style="width:50% ; height: 50%" src="@Url.Content(item.User_Image)" />
                }
                else
                {
                    <span>No image available</span>
                }
            </td>
            <td>
               
                @Html.ActionLink("Delete", "Delete", new { id = item.User_Id })
            </td>
        </tr>
    }

</table>
