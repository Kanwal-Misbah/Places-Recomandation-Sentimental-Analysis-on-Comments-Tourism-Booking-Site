@model IEnumerable<Fin.Models.Business_User>
@using Fin.Models
@using System.Web.SessionState

@{
    ViewBag.Title = "Index";
}
@{
    Layout = "~/Views/Shared/_LayoutBusinessUser.cshtml";

}
<h2>Business Users</h2>
<p>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bus_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bus_Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bank_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bank_Account_number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bus_Reg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bus_Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bus_Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bus_logo)

        </th>
        
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (Session["BussinessUser"] != null)
        {
            Business_User p = Session["BussinessUser"] as Business_User;
            if (p != null && p.Bus_User_Id == item.Bus_User_Id)
            {
             
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bus_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bus_Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bank_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bank_Account_number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bus_Reg)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bus_Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bus_Password)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Bus_logo))
                        {
                            <img style="width:50% ; height: 50%" src="@Url.Content(item.Bus_logo)" />
                        }
                        else
                        {
                        <span> No image available </span >
                          
                        }

                    </td>
                    
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Bus_User_Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Bus_User_Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Bus_User_Id })
                    </td>
                </tr>
            }
        }
    }

</table>
